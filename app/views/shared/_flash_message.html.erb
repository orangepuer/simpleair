<% unless flash.empty? %>
  <script type="text/javascript">
    <% flash.each do |key, value| %>
      <% if key == 'error_messages' %>
        <% value.each do |message| %>
          toastr.error('<%= message %>');
        <% end %>
      <% else %>
        <% type = key.to_s.gsub('alert', 'error').gsub('notice', 'success') %>
        toastr['<%= type %>']('<%= value %>');
      <% end %>
    <% end %>
  </script>
<% end %>