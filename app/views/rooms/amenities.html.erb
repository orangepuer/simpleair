<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Amenities
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_with(model: @room, local: true) do |f| %>
            <div class="row form-group">
              <div class="col-md-4">
                <%= f.check_box :is_tv %>
                <%= f.label :is_tv, 'TV' %>
              </div>
              <div class="col-md-4">
                <%= f.check_box :is_kitchen %>
                <%= f.label :is_kitchen, 'Kitchen' %>
              </div>
              <div class="col-md-4">
                <%= f.check_box :is_internet %>
                <%= f.label :is_internet, 'Internet' %>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-md-4">
                <%= f.check_box :is_heating %>
                <%= f.label :is_heating, 'Heating' %>
              </div>
              <div class="col-md-4">
                <%= f.check_box :is_air %>
                <%= f.label :is_air, 'Air' %>
              </div>
            </div>
            <div class="text-center">
              <%= f.submit class: 'btn btn-form' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>