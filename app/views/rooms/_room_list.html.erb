<% @rooms.each do |room| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading preview">
        <%= image_tag room.photos.first.variant(resize: "300x300") %>
      </div>
      <div class="panel-body">
        <%= link_to room.listing_name, room %>
        <br>
        <%= "#{room.price}$ - #{room.home_type} - #{pluralize(room.bedroom_amount, 'bed')}" %>
        <div class="average-ratings" data-average-rating="<%= room.average_rating %>">
        </div> <%= pluralize(room.guest_reviews.length, 'review') %>
      </div>
    </div>
  </div>
<% end %>