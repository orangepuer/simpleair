<div class="row">
  <div class="col-md-3">
    <div class="center">
      <%= image_tag avatar_url(@user), class: 'avatar-full' %>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        Verification
      </div>
      <div class="panel-body">
        <ul class="sidebar-list">
          <li>
            Email Address<span class="pull-right color-sea"><i class="fa fa-check-circle"></i></span>
          </li>
          <li>
            Phone Number<span class="pull-right color-sea"><i class="fa fa-check-circle"></i></span>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h2>
      <%= @user.fullname %>
    </h2>
    <div class="description row-space-3">
      <%= @user.description %>
    </div>
    <h4>
      Listings (<%= @user.rooms.length %>)
    </h4>
    <br>
    <div class="row">
      <% @user.rooms.each do |room| %>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
              <%= image_tag room.photos.first.variant(resize: "300x300") %>
            </div>
            <div class="panel-body">
              <%= link_to room.listing_name, room_path %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>